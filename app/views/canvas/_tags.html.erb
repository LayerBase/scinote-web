<div class="tags-container pull-right">
  <% tags2 = my_module.tags[0..3] %>
  <% tags2.each do |tag| %>
    <div style="color: <%= tag.color %>" class="<%= "last" if tag == tags2[-1] %> popover_v2" data-popoverlink="<%= I18n.t('popover_test.link.task.color_tag') %>" data-popovercontent="<%= I18n.t('popover_test.text.task.color_tag') %>" title="<%= tag.name %>">
      <span class="fas fa-tag"></span>
    </div>
  <% end %>
  <% if tags2.count == 0 %>
    <div class="add-tag last"><span class="fas fa-tag"></span></div>
  <% end %>
  <% if my_module.tags.count > 0 %>
    <span class="badge badge-indicator">
      <%= my_module.tags.count %>
    </span>
  <% else %>
    <span class="badge badge-indicator <%= "invisible" unless can_manage_module?(my_module) %>">
      +
    </span>
  <% end %>
</div>
